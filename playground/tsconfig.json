{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"paths": {
			"sileo-vue": ["../packages/sileo-vue/src/index.ts"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue",
		"../packages/sileo-vue/src/**/*.ts",
		"../packages/sileo-vue/src/**/*.vue"
	]
}
